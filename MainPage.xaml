<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OraiDolgozatMAUI.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="logo.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="KandoLogo" />

            <Label Text="Belépés" FontSize="24" FontAttributes="Bold" VerticalOptions="Center" HorizontalOptions="Center" />


            <Label Text="Felhasználónév" FontSize="18" />
            <Entry x:Name="usernameEntry" Placeholder="Írd be a felhasználóneved" FontSize="16" />

            <Label Text="Jelszó" FontSize="18" />
            <Entry x:Name="passwordEntry" Placeholder="Írd be a jelszavad" IsPassword="True" FontSize="16" />

            <Button Text="Belépés" FontSize="18" Clicked="OnLoginButtonClicked" />


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
